[error_message]
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
  <head>
    <title>{title}</title>
    <link rel="stylesheet" href="/file/main.css" type="text/css"/>
    <link rel="shortcut icon" href="data:image/x-icon;," type="image/x-icon"/>
    <script type="text/javascript" src="/file/main.js"/>
  </head>
  <body>
    <div id="top">
      {navigation}
    </div>
    <div id="middle">
      <h1>{title}</h1>

      <div id="error-summary">
        {summary}
      </div>

      <div id="error-details" class="hidden">
        {details}
      </div>

      <div id="error-details-link" class="button-group">
        <a class="button" href="#" onclick="_showElement('error-details'); _hideElement('error-details-link');">Show details</a>
      </div>
    </div>
    <div id="bottom">
    </div>
  </body>
</html>
